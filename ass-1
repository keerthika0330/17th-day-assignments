#include<stdio.h> 
    #include<limits.h> 
     main() 
    { 
    	int min,max,i,n,num; 
    	min = INT_MAX; 
    	 
    	printf(" enter how many numbers : "); 
    	scanf("%d",&n); 
    	i=0; 
    	while(i<n) 
    	{ 
    		printf("Number-%d: ",i); 
    		scanf("%d",&num); 
    		if(num<min)	min = num; 
    	     i++;}
    	 
    	printf("Smallest number = %d\n",min); 
    } 
